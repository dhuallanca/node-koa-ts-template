{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [ "es5", "es6" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true, 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}